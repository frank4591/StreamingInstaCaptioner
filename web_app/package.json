{
  "name": "streaming-instagram-captioner",
  "version": "1.0.0",
  "description": "Web-based Streaming Instagram Captioner with LFM2-VL",
  "main": "backend/server.js",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && node server.js",
    "frontend": "cd frontend && python -m http.server 3000",
    "model-server": "cd model_server && python model_server_fixed.py",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run model-server\"",
    "install-deps": "npm install && cd backend && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "multer": "^1.4.4",
    "axios": "^1.5.0",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "streaming",
    "instagram",
    "caption",
    "lfm2-vl",
    "liquid-ai",
    "vision-language",
    "real-time"
  ],
  "author": "Streaming Instagram Captioner Team",
  "license": "MIT"
}
